<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/widget_background"
    android:paddingBottom="16dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/widget_team_score_home_crest"
            style="@style/AppTheme.TeamCrest.Large"
            tools:src="@drawable/crest_placeholder"
            android:layout_marginBottom="4dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/widget_team_score_home_name"
            tools:text="Sample team name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/widget_text_color_secondary_light" />

    </LinearLayout>

    <TextView
        android:id="@+id/widget_team_score_score_text_view"
        tools:text="0 - 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:padding="8dp"
        android:singleLine="true"
        android:textColor="@color/widget_text_color_primary_light"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/widget_team_score_away_crest"
            style="@style/AppTheme.TeamCrest.Large"
            tools:src="@drawable/crest_placeholder"
            android:layout_marginBottom="4dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/widget_team_score_away_name"
            tools:text="Sample team name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/widget_text_color_secondary_light" />

    </LinearLayout>

</LinearLayout>