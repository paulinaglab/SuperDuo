<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/widget_background_dark"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingTop="12dp">

    <TextView
        android:id="@+id/widget_team_coming_date_of_fixture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/widget_text_color_primary_light"
        android:textAlignment="viewStart"
        tools:text="Day of fixture, 12:00" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/widget_team_coming_home_crest"
            style="@style/AppTheme.TeamCrest.Small"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:padding="2dp"
            tools:src="@drawable/crest_placeholder" />

        <TextView
            android:id="@+id/widget_team_coming_home_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/widget_text_color_primary_light"
            android:textAlignment="viewStart"
            tools:text="Sample home name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/widget_team_coming_away_crest"
            style="@style/AppTheme.TeamCrest.Small"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:padding="2dp"
            tools:src="@drawable/crest_placeholder" />

        <TextView
            android:id="@+id/widget_team_coming_away_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/widget_text_color_primary_light"
            android:textAlignment="viewStart"
            tools:text="Sample away name" />

    </LinearLayout>

</LinearLayout>