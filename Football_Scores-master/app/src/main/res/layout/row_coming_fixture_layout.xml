<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:theme="@style/ScoreCardTheme">

    <TextView
        android:id="@+id/row_home_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textAlignment="viewEnd"
        tools:text="Home team name" />

    <ImageView
        style="@style/AppTheme.TeamCrest.Tiny"
        tools:src="@drawable/crest_placeholder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="@string/coming_fixture_versus_text" />

    <ImageView
        style="@style/AppTheme.TeamCrest.Tiny"
        tools:src="@drawable/crest_placeholder" />

    <TextView
        android:id="@+id/row_away_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textAlignment="viewStart"
        tools:text="Away team name" />

</LinearLayout>