<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ScoreCardTheme.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/ScoreCardTheme">


    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        app:columnCount="2">

        <include
            layout="@layout/title_bar_card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_columnSpan="2" />

        <TextView
            android:id="@+id/ctfc_date_of_fixture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_columnSpan="2"
            tools:text="Day of fixture, 12:00"
            android:textAlignment="viewStart"
            app:layout_gravity="start"/>

        <ImageView
            android:id="@+id/ctfc_home_crest"
            style="@style/AppTheme.TeamCrest.Small"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_gravity="center_vertical"
            tools:src="@drawable/crest_placeholder" />

        <TextView
            android:id="@+id/ctfc_home_name"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            tools:text="Sample home name" />

        <ImageView
            android:id="@+id/ctfc_away_crest"
            style="@style/AppTheme.TeamCrest.Small"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_gravity="center_vertical"
            tools:src="@drawable/crest_placeholder" />

        <TextView
            android:id="@+id/ctfc_away_name"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            tools:text="Sample away name" />

    </android.support.v7.widget.GridLayout>

</android.support.v7.widget.CardView>