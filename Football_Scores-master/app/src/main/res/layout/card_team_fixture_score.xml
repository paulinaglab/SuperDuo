<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ScoreCardTheme.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/ScoreCardTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/title_bar_card_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ctfs_home_crest"
                    style="@style/AppTheme.TeamCrest.Large"
                    tools:src="@drawable/crest_placeholder" />

                <TextView
                    android:id="@+id/ctfs_home_name"
                    style="@style/AppTheme.TextView.TeamName"
                    tools:text="Sample team name" />

            </LinearLayout>

            <TextView
                android:id="@+id/ctfs_score_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="?android:textColorPrimary"
                android:textSize="45dp"
                tools:text="0 - 0"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ctfs_away_crest"
                    style="@style/AppTheme.TeamCrest.Large"
                    tools:src="@drawable/crest_placeholder" />

                <TextView
                    android:id="@+id/ctfs_away_name"
                    style="@style/AppTheme.TextView.TeamName"
                    tools:text="Sample team name" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>