<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.jaschke.alexandria.fragments.BookDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <it.jaschke.alexandria.widgets.BookInfoView
            android:id="@+id/details_book_info_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/DetailsTheme"
            android:background="@color/book_color_pebble" />

        <TextView
            android:id="@+id/details_description_label"
            style="@style/AppTheme.TextView.Subheader"
            android:text="@string/details_description_label" />

        <TextView
            android:id="@+id/details_description_text_view"
            style="@style/AppTheme.TextView.LongText"
            android:paddingBottom="@dimen/normal_size_margin"
            android:paddingLeft="@dimen/default_outer_content_padding"
            android:paddingRight="@dimen/default_outer_content_padding" />

    </LinearLayout>


</ScrollView>
